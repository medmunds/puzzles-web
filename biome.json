{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 88
  },
  "files": {
    "includes": [
      "**",
      "!**/puzzles/**",
      "!**/build/**",
      "!**/dev-dist/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/src/assets/puzzles/**"
    ]
  }
}
